<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.intellimarket.shop.dao.CartDAO">
	<resultMap type="Cart" id="joinMap">
		<id 		column="cart_id" 		property="cartId"/>
		<result 	column="quantity" 	property="quantity"/>
		
		<association 
			column="member_id" 
			property="member" 
			javaType="Member"
			select="com.intellimarket.shop.dao.MemberDAO.selectById"
		/>
		
		<association 
			column="product_id" 
			property="product" 
			javaType="Product"
			select="com.intellimarket.store.dao.ProductDAO.select"
		/>
	</resultMap>
	
	<!-- 회원 단 건 조회 (ID 기반) -->
	<select id="selectById" parameterType="Cart" resultMap="joinMap">
		select * 
		  from cart 
		where cart_id = #{cartId}
	</select>
	
	<!-- 전체 목록 조회 -->
	<select id="selectAll" resultMap="joinMap">
		select * from cart
	</select>
	
	<!-- 멤버 ID별 전체 목록 조회 -->
	<select id="selectAllByMemberId" parameterType="int" resultMap="joinMap">
		select * 
		  from cart 
		where member_id = #{memberId}
	</select>
	
	<!-- 상태별 전체 목록 조회 -->
	<select id="selectAllByStatus" parameterType="int" resultMap="joinMap">
		select * 
		  from cart 
		where status = 1
		   and member_id = #{memberId}
	</select>
	
	<!-- 장바구니 등록 -->
	<insert id="insert" parameterType="Cart">
		insert into cart(quantity, product_id, member_id)
		values(#{quantity}, #{product.productId}, #{member.memberId})
	</insert>
	
	<!-- 장바구니 수량 수정 -->
	<update id="updateQuantity" parameterType="Cart">
		update cart
			 set quantity = #{quantity},
			 	  status = #{status}
		 where cart_id   = #{cartId} 
	</update>
	
	<!-- 장바구니 삭제 -->
	<delete id="delete" parameterType="int">
		delete from cart
		where cart_id = #{cartId}
	</delete>
	
	<delete id="deleteByMemberIdAndProductIds">
	  	delete from cart
	  	where member_id = #{memberId}
	    and product_id IN
    <foreach item="id" collection="productIds" open="(" separator="," close=")">
      #{id}
    </foreach>
</delete>
</mapper>